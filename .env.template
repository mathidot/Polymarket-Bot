# --- 模式与初始化 ---
simulation_mode=true
init_pair_mode=config
config_interest_json=interest_markets.json

# --- 交易参数（必需） ---
trade_unit=100
slippage_tolerance=0.02
pct_profit=0.1
pct_loss=-0.1
cash_profit=10
cash_loss=-5
spike_threshold=0.05
spike_threshold_up=0.05
spike_threshold_down=0.05
sold_position_time=600
holding_time_limit=600
max_concurrent_trades=4
min_liquidity_requirement=0

# --- 价格与风控辅助参数（推荐） ---
price_history_size=100
cooldown_period=60
keep_min_shares=0
positions_log_throttle_secs=2.0

# --- 订单簿缓存与重试（可选） ---
orderbook_cache_enabled=true
orderbook_cache_ttl=1.0
orderbook_retry_max=3
orderbook_retry_base_delay=0.2
orderbook_retry_jitter_ms=50

# --- 配对套利（可选） ---
arb_entry_sum_threshold=0.995
arb_exit_sum_threshold=1.005

# --- 其余默认项保持代码内置默认值 ---